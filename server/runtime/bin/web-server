#!/bin/sh
. ${SERVER_ROOT}/runtime/lib/bootstrap.sh

pip install -r ${SERVER_ROOT}/requirements.txt
wait_until_db_is_ready
python ${SERVER_ROOT}/manage.py migrate --noinput
python ${SERVER_ROOT}/manage.py collectstatic --noinput
gunicorn bullet.wsgi:application -b 0.0.0.0:80 -k gevent -w ${GEVENT_WORKERS} --chdir ${SERVER_ROOT}
